extends layout.pug

block content

  include includes/nav.pug

  //- Project name and description
  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1 #{project_name}

        p #{description}

      .project-tech-links-box.box
        h6 Tech
        ul

          each tech in technologies
            li #{tech}

        a.btn-link(href=`${live_link}` target="_blank") Live Demo
        a.btn-link(href=`${github_link}` target="_blank") GitHub Repo

    //- Project Images
    .project-img-box.box

      img.project-img(src=`/static/images/${image_urls[1][0]}`, alt=`${image_urls[1][1]}`)
      img.project-img(src=`/static/images/${image_urls[2][0]}`, alt=`${image_urls[2][1]}`)
      img.project-img(src=`/static/images/${image_urls[3][0]}`, alt=`${image_urls[3][1]}`)

    .projectsNav 
      h5 Project Navigation
      a.prevProj(href=`${id-1}`) Prev
      a.nextProj(href=`${id+1}`) Next
      

    nav.nav
      a(href='/')
        span &larr;
        |  Back Home

  script.
    const prev = document.querySelector(".prevProj");
    const next = document.querySelector(".nextProj");
    if (#{id} === 0) {
      prev.style.display = "none";
    }
    if (#{id} === 5) {
      next.style.display = "none";
    }
